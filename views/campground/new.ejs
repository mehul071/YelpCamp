<% layout('layout/boilerplate') %>
<div class="row">
    <h1 class="text-center">New Campground</h1>
        <div class="col-6 offset-3">
            <form action="/campgrounds" method="POST" novalidate class="validationforms">
                <div class="mb-4">
                    <label class="form-label" for="title">Title</label>
                    <input class="form-control" type="text" id="title" name="campground[title]" required>
                    <div class="valid-feedback">
                        looks cool..!!
                    </div>
                </div>
                <div class="mb-4">
                    <label class="form-label" for="location">Location</label>
                    <input  class="form-control" type="text" id="location" name="campground[location]" required>
                    <div class="valid-feedback">
                        looks cool..!!
                    </div>
                </div>
                <div class="mb-4">
                    <label class="form-label" for="addurl">Add Image</label>
                    <input class="form-control" type="text" id="addurl" name="campground[image]" required>
                    <div class="valid-feedback">
                        looks cool..!!
                    </div>
                </div>
                <div class="mb-3">
                    <label class="form-label" for="price">Campground Price</label>
                    <div class="input-group mb-3">
                        <span class="input-group-text">$</span>
                        <input type="text" class="form-control" name="campground[price]" required aria-label="price" required>
                        <div class="valid-feedback">
                            looks cool..!!
                        </div>
                    </div>
                </div>
                <div class="mb-4">
                    <label class="form-label" for="description">Description</label>
                    <textarea name="campground[description]" id="description" cols="90" rows="5" required></textarea>
                    <div class="valid-feedback">
                        looks cool..!!
                    </div>
                </div>
                <div class="mb-3"> 
                    <button class="btn btn-info">Add Campground</button>
                </div>
            </form>
            <a class="btn btn-warning mb-3" href="/campgrounds">Back To Campgrounds</a>
        </div>
</div>
